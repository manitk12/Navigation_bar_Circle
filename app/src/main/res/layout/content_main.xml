<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/new_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.grademojo.navigation_bar_circle.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/new_grey"
        android:id="@+id/view"
        >


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="30dp"
        >



    </com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/settings"

            />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <ImageView
                android:id="@+id/arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/arro"
                />

        </FrameLayout>

        <ImageView
            android:id="@+id/calender_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calendar"
            android:layout_marginEnd="15dp"
            />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_white"


        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_photo_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/dark_green"
            app:cardCornerRadius="16dp"


            >

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/photo_text_view"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/new_grey"
            android:layout_alignTop="@+id/card_view_photo_image"
            android:layout_alignBottom="@+id/card_view_photo_image"
            android:layout_toEndOf="@+id/card_view_photo_image"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.3 Mb"
            android:layout_toEndOf="@+id/photo_text_view"
            android:layout_alignTop="@+id/photo_text_view"
            android:layout_alignBottom="@+id/photo_text_view"
            android:gravity="center_vertical"
            />



        <android.support.v7.widget.CardView
            android:id="@+id/card_view_photo_image2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/new_green"
            app:cardCornerRadius="16dp"
            android:layout_below="@+id/card_view_photo_image"


            >

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/photo_text_view2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/new_grey"
            android:layout_alignTop="@+id/card_view_photo_image2"
            android:layout_alignBottom="@+id/card_view_photo_image2"
            android:layout_toEndOf="@+id/card_view_photo_image2"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="950 KB"
            android:layout_toEndOf="@+id/photo_text_view2"
            android:layout_alignTop="@+id/photo_text_view2"
            android:layout_alignBottom="@+id/photo_text_view2"
            android:gravity="center_vertical"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_photo_image3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/new_yellow"
            app:cardCornerRadius="16dp"
            android:layout_below="@+id/card_view_photo_image2"
            android:layout_marginBottom="80dp"


            >

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/photo_text_view3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/new_grey"
            android:layout_alignTop="@+id/card_view_photo_image3"
            android:layout_alignBottom="@+id/card_view_photo_image3"
            android:layout_toEndOf="@+id/card_view_photo_image3"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="890 KB"
            android:layout_toEndOf="@+id/photo_text_view3"
            android:layout_alignTop="@+id/photo_text_view3"
            android:layout_alignBottom="@+id/photo_text_view3"
            android:gravity="center_vertical"
            />




    </RelativeLayout>




    </LinearLayout>






</ScrollView>
